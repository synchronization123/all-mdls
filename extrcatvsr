<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Extract Full Version Codes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <h3 class="mb-4">Extract Unique Full Version Codes (V11/V12/R11/R12)</h3>

    <div class="mb-3">
      <label for="inputText" class="form-label">Paste your paragraph below:</label>
      <textarea class="form-control" id="inputText" rows="6" placeholder="Paste text here..."></textarea>
    </div>

    <button class="btn btn-primary mb-3" onclick="extractData()">Extract</button>

    <div class="mb-3">
      <label for="outputText" class="form-label">Extracted Unique Data (comma separated):</label>
      <textarea class="form-control" id="outputText" rows="4" readonly></textarea>
    </div>
  </div>

  <script>
    function extractData() {
      const text = document.getElementById('inputText').value;

      // Match entire strings starting with V11/V12/R11/R12 until a space or punctuation (, ; : ! ? etc.)
      const regex = /\b(V11|V12|R11|R12)[a-zA-Z0-9._\-]*/gi;
      const matches = text.match(regex);

      if (matches) {
        const unique = [...new Set(matches)];
        document.getElementById('outputText').value = unique.join(", ");
      } else {
        document.getElementById('outputText').value = "";
      }
    }
  </script>

</body>
</html>